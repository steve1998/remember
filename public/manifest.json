{
  "short_name": "Remember",
  "name": "Remember",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["app/background.js"]
  },
  "browser_action": {},
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "css": ["/css/root.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "icons": {
    "16": "app/assets/logo16.png",
    "48": "app/assets/logo48.png",
    "128": "app/assets/logo128.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources":[
    "/static/css/content.css", "/static/media/*"
  ],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
